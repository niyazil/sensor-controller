<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lstBeacons"
        android:layout_width="match_parent"
        android:layout_height="512dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </ListView>



    <ImageButton
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/allocate_1"
        android:background="@null"
        android:layout_alignTop="@+id/readResults"
        android:layout_toEndOf="@+id/scan" />

    <ImageButton
        android:id="@+id/readResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:src="@drawable/read_1"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/power"
        android:layout_marginEnd="65dp" />

    <ImageButton
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scan_1"
        android:background="@null"
        android:layout_alignTop="@+id/power"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/recordReadings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/power"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/scan"
        android:background="@null"
        android:src="@drawable/record_1" />


</RelativeLayout>